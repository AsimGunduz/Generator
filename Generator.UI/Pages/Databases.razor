@page "/Databases"

<PageTitle>Databases</PageTitle>

<MudTable Items="@DATABASE" Hover="true" Breakpoint="Breakpoint.Sm"  LoadingProgressColor="Color.Info">
    <HeaderContent>
        <MudTh>Name</MudTh>
        <MudTh>Connection</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Name" >@context.DatabaseIdentifier</MudTd>
        <MudTd DataLabel="Connection">@context.ConnectionString</MudTd>
    </RowTemplate>
</MudTable>